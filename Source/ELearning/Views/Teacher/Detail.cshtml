@{
    ViewBag.Title = Model.FullName;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var query = ViewBag.QueryData ?? "";

    var teacherProfile = (TeacherProfile)ViewBag.TeacherProfile;
}

@using BELibrary.Entity
@using PagedList.Mvc

@model  User

<!-- Start main-content -->
<div class="main-content">

    <!-- Section: inner-header -->
    <section class="inner-header divider parallax layer-overlay overlay-dark-5" data-bg-img="/content/images/bg/bg3.jpg">
        <div class="container pt-70 pb-20">
            <!-- Section Content -->
            <div class="section-content">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="title text-white">Teachers Details</h2>
                        <ol class="breadcrumb text-left text-black mt-10">
                            <li><a href="/">Home</a></li>
                            <li><a href="#">Pages</a></li>
                            <li class="active text-gray-silver">@Model.FullName</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section: Experts Details -->
    <section>
        <div class="container">
            <div class="section-content">
                <div class="row">
                    <div class="col-md-4">
                        <div class="thumb">
                            <img src="@Model.LinkAvata" alt="@Model.FullName">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <h4 class="name font-24 mt-0 mb-0">@Model.FullName</h4>
                        <div class="content-data">
                            @teacherProfile.Description
                        </div>
                        <ul class="styled-icons icon-dark icon-theme-colored icon-sm mt-15 mb-0">
                            <li><a href="@teacherProfile.FacebookLink"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="@teacherProfile.TwitterLink"><i class="fa fa-skype"></i></a></li>
                            <li><a href="@teacherProfile.SkypeLink"><i class="fa fa-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="row mt-30">
                    <div class="col-md-4">
                        <h4 class="line-bottom">Thông tin:</h4>
                        <div class="volunteer-address">
                            <ul>
                                <li>
                                    <div class="bg-light media border-bottom p-15 mb-20">
                                        <div class="media-left">
                                            <i class="pe-7s-pen text-theme-colored font-24 mt-5"></i>
                                        </div>
                                        <div class="media-body">
                                            <h5 class="mt-0 mb-0">Kinh nghiệm:</h5>
                                            <p>
                                                @teacherProfile.Experiences
                                            </p>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="bg-light media border-bottom p-15 mb-20">
                                        <div class="media-left">
                                            <i class="fa fa-map-marker text-theme-colored font-24 mt-5"></i>
                                        </div>
                                        <div class="media-body">
                                            <h5 class="mt-0 mb-0">Địa chỉ:</h5>
                                            <p> @teacherProfile.Address</p>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="bg-light media border-bottom p-15">
                                        <div class="media-left">
                                            <i class="fa fa-phone text-theme-colored font-24 mt-5"></i>
                                        </div>
                                        <div class="media-body">
                                            <h5 class="mt-0 mb-0">Liên hệ:</h5>
                                            <p>
                                                <span>Số điện thoại:</span> @teacherProfile.ContactPhone
                                                <br>
                                                <span>Email:</span>  @teacherProfile.ContactEmail
                                            </p>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="clearfix">
                            <h4 class="line-bottom">Liên hệ trực tiếp:</h4>
                        </div>
                        <form id="contact-form" class="contact-form-transparent">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" placeholder="Nhập Họ Tên" id="contact_name" name="contact_name" required="" class="form-control">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="text" placeholder="Nhập địa chỉ Email" id="contact_email" name="contact_email" class="form-control" required="">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <input type="text" placeholder="Nhập lớp học" id="contact_subject" name="contact_subject" class="form-control" required="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea rows="5" placeholder="Nhập thông tin cần liên hệ" id="contact_message" name="contact_message" required class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <button data-loading-text="Vui lòng chờ..." class="btn btn-flat btn-dark btn-theme-colored mt-5" type="submit">Gửi thông tin</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- end main-content -->